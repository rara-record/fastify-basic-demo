{
  "name": "@fastify-boilerplate-demo/app",
  "type": "module",
  "scripts": {
    "build": "node ./esbuild.config.js",
    "dev": "nodemon",
    "start": "node --loader=extensionless dist/index.js"
  },
  "nodemonConfig": {
    "exec": "rm -rf ./dist && yarn node ./esbuild.config.js && yarn node --loader=extensionless dist/index.js | yarn pino-pretty --singleLine",
    "ext": "ts",
    "ignore": [
      "dist/**",
      "node_modules/**"
    ],
    "watch": "src"
  },
  "dependencies": {
    "@fastify/autoload": "^6.1.0",
    "@fastify/cors": "^10.1.0",
    "@fastify/env": "^5.0.2",
    "@sinclair/typebox": "^0.34.28",
    "dotenv": "^16.4.7",
    "dotenv-safe": "^9.1.0",
    "extensionless": "^1.9.9",
    "fastify": "^5.2.1",
    "fastify-graceful-shutdown": "^4.0.1",
    "fastify-plugin": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "esbuild": "^0.25.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.7.3"
  },
  "packageManager": "yarn@4.6.0"
}
